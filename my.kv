#:import Factory kivy.factory.Factory
<Subjects>:
    GridLayout:
        id: main_layout
        cols: 1
        Button:
            size_hint: 1, 1
            text: 'русский'

        Button:
            id: mat
            size_hint: 1, 1
            text: 'Алгебра'
            on_press:
                root.manager.current = 'ypr'

        Button:
            size_hint: 1, 1
            text: 'русский'

        Button:
            size_hint: 1, 1
            text: 'русский'



<Ypr@Ypr>:
    id: main_layout
    BoxLayout:
        id: img
        orientation: 'vertical'
        size_hint: 1, 1
        BoxLayout:
            id: main_button
            size_hint: 1, .2
            orientation: 'vertical'
            GridLayout:
                cols:2
                size_hint: 1, .1

                Button:
                    text: 'назад'
                    font_size: 25
                    size_hint: 1, .1
                    on_press:
                        root.manager.current = 'predmets'
                        root.clear()
                        root.clear_button()
                Button:
                    text: 'развернуть'
                    size_hint: 1, .1
                    font_size: 25
                    on_press:
                        Factory.MyPopup().open()
                        root.clear()
                        root.clear_button()


        ScrollView:
            id: scroll
            size_hint_y: .9


<Buttons@Button>:
    background_color: 68/255, 68/255, 68/255, 1
    font_size: 25

<MyPopup@Popup>:
    id: MyPopups
    auto_dismiss: True
    title: 'введи номер упражнения'
    size_hint: 1, .5
    pos_hint:{"x":0 ,"y":0}
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            id: main

            Label:
                id: labels
                text: ''
                size_hint: 1, 0.3
                font_size: 30
            GridLayout:
                id: btn
                cols: 3

                Buttons:
                    text: '1'
                    on_press:
                        root.lbl(self.text)

                Buttons:
                    text: '2'
                    on_press:
                        root.lbl(self.text)
                Buttons:
                    text: '3'
                    on_press:
                        root.lbl(self.text)

                Buttons:
                    text: '4'
                    on_press:
                        root.lbl(self.text)
                Buttons:
                    text: '5'
                    on_press:
                        root.lbl(self.text)
                Buttons:
                    text: '6'
                    on_press:
                        root.lbl(self.text)
                Buttons:
                    text: '7'
                    on_press:
                        root.lbl(self.text)
                Buttons:
                    text: '8'
                    on_press:
                        root.lbl(self.text)
                Buttons:
                    text: '9'
                    on_press:
                        root.lbl(self.text)
                Button:
                    text: 'C'
                    background_color: 218/255, 0, 55/255, 1
                    font_size: 25
                    on_press:
                        root.clear()
                Buttons:
                    text: '0'
                    on_press:
                        root.lbl(self.text)
                Button:
                    text: '<--'
                    background_color: 218/255, 0, 55/255, 1
                    font_size: 25
                    on_press:
                        root.del_one_element_label()
            Button:
                id: btn_poisk
                size_hint: 1, .3
                text: 'найти'
                background_color: 237/255, 237/255, 237/255, 1
                font_size: 25
                on_press:
                    root.otveti(root.ids['labels'].text)




